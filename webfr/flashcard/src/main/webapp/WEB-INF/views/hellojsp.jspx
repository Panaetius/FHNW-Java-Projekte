<div xmlns:jsp="http://java.sun.com/JSP/Page" xmlns:c="http://java.sun.com/jsp/jstl/core">

	<c:choose>
		<c:when test="${answer.language eq 'de'}">
			Hallo an ${answer.to} von ${answer.from}.
		</c:when>	
		<c:otherwise>
			Hello to ${answer.to} from ${answer.from}.
		</c:otherwise>
	</c:choose>
</div>