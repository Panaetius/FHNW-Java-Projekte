<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="flashcardsDB" transaction-type="RESOURCE_LOCAL">
	  <provider>org.hibernate.ejb.HibernatePersistence</provider>
	  <class>webfr.flashcards.shared.Cardbox</class>
	  <class>webfr.flashcards.shared.Card</class>
	  <class>webfr.flashcards.shared.User</class>
	  <class>webfr.flashcards.server.data.PBookmark</class>
	  
	  <properties>
	  	<property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver"/>
	  	<property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:flashcards"/>
	  	<property name="javax.persistence.jdbc.user" value="sa"/>
	  	<property name="javax.persistence.jdbc.password" value=""/>
	  	<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
	  	<property name="hibernate.hbm2ddl.auto" value="update"/>
	  </properties>
	</persistence-unit>
</persistence>
