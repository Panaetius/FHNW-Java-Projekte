<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0"
  metadata-complete="true">

    <servlet>
      <servlet-name>WsEchoMsg</servlet-name>
      <servlet-class>ch.fhnw.ds.ws.tomcat.echo.EchoMessage</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>WsEchoMsg</servlet-name>
      <url-pattern>/websocket/echo</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>WsEchoStream</servlet-name>
      <servlet-class>ch.fhnw.ds.ws.tomcat.echo.EchoStream</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>WsEchoStream</servlet-name>
      <url-pattern>/websocket/echostream</url-pattern>
    </servlet-mapping>

</web-app>